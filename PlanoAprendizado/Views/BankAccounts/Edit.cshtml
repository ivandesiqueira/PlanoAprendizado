@model PlanoAprendizado.Models.BankAccount

@{
    ViewData["Title"] = "Edit";
}
<h4>Editar Conta Bancária</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnterpriseId" class="control-label"></label>
                <select asp-for="EnterpriseId" class="form-control" asp-items="ViewBag.EnterpriseId"></select>
                <span asp-validation-for="EnterpriseId" class="text-danger"></span>
            </div>
           @* <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="InitialBalance" class="control-label"></label>
                <input asp-for="InitialBalance" class="form-control" />
                <span asp-validation-for="InitialBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
