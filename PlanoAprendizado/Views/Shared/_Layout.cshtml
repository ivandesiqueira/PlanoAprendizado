<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] PlanoAprendizadoa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
</head>

<body class="sidebar-mini sidebar-collapse" style="height: auto;">
    <style>
        table{
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            max-width: 100px;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        th{
            background-color: #f2f2f2;
        }
    </style>

    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            @if (User.Identity.IsAuthenticated) { 
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                </li>
            </ul>
            }
            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
               <partial name="_LoginPartial" />

                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- /.navbar -->
        @if (User.Identity.IsAuthenticated) { 
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4" style="background-color: dodgerblue">
            
            <!-- Brand Logo -->
            <a class="brand-link">
                <img src="~/img/logo1500.png"class="img-size-50 mr-3" >
                <span class="brand-text font-weight-light" style="color: white">Plano Aprendizado</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="#" class="nav-link" style="color:white"> 
                                <i class="fa fa-users" style="text-align: center; padding-right: 16px"></i>
                                <p>
                                    Cadastros
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="People" asp-action="Index" >
                                        <i class="far fa-circle nav-icon"></i>
                                       <p>Pessoa</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Themes" asp-action="Index">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Tema</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Circles" asp-action="Index">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Círculo</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link" style="color:white">
                                <i class="fa fa-folder-open" style="text-align: center; padding-right: 16px"></i>
                                <p>
                                    Arquivos
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Learnings" asp-action="Index">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Aprendizado</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="Feedbacks" asp-action="Index">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Feedback</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link" style="color:white">
                                <i class="fas fa-project-diagram" style="text-align: center; padding-right: 16px"></i>
                                <p>
                                    Projetos
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview" >
                                <li class="nav-item" >
                                    <a class="nav-link " asp-area="" asp-controller="Projects" asp-action="Index">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Projeto</p>
                                    </a>
                                </li>
                                 <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="TypeConsultors" asp-action="Index">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Tipo Consultor</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link" style="color:white">
                                    <i class="fa fa-tasks" style="text-align: center; padding-right: 16px"></i>
                                    <p>
                                        Status Projetos
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">       
                                    <li class="nav-item">
                                        <a class="nav-link " asp-area="" asp-controller="ActualStates" asp-action="Index">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Estado Atual</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link " asp-area="" asp-controller="DayTimes" asp-action="Index">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Horas Dia</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        }
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="min-height: 543px;">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-left">
                                <!-- Timeline Buttons -->
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark" style="display: none;">
            <!-- Control sidebar content goes here -->
            <div class="p-3">
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <!-- Default to the left -->
            <strong>Copyright © 2023 <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidade</a>.</strong> Todos direitos reservados.
        </footer>
        <div id="sidebar-overlay"></div>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.min.js"></script>

    <!-- ORIGINAL SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
